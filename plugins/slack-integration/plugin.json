{
  "name": "slack-integration",
  "version": "1.0.0",
  "description": "Slack integration via MCP - send messages, read channels, DM yourself, and interact with your workspace",
  "author": {
    "name": "nxg-gg",
    "url": "https://github.com/nxg-gg"
  },
  "homepage": "https://github.com/nxg-gg/claude-code-marketplace",
  "repository": "https://github.com/nxg-gg/claude-code-marketplace",
  "license": "Unlicense",
  "keywords": ["slack", "messaging", "notifications", "mcp", "communication"],
  "category": "communication",
  "mcpServers": {
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      }
    }
  }
}